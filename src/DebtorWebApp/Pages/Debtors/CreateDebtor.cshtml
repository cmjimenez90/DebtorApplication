@page
@model DebtorWebApp.Pages.Debtors.NewDebtorModel
@{
    ViewData["Title"] = "Create Debtor";
}

<h1>Create New Debtor</h1>

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Debtor.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="Debtor.FirstName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="Debtor.LastName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>IBAN</label>
        <input asp-for="Debtor.IBAN" class="form-control"/>
    </div>
    <input type="submit" class="btn btn-primary"/>
</form>

